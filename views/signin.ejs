    <title>GPA Signin</title>
    <!-- Favicon -->
    <link rel="icon" href="favicon/favicon.ico">
    <!-- Social icons -->
    <link rel="canonical" href="https://getbootstrap.com/docs/4.5/examples/sign-in/">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- Bootstrap Javascript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <!-- Font awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <!-- Google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }

    </style>
    <!-- Custom styles -->
    <link href="css/styles1.css" rel="stylesheet">
    <!-- Bootstrap socials-->
    <link rel="stylesheet" href="css/bootstrap-social.css">
</head>

<body>
    <nav>
        <a class="navbar-brand" href="/">
            <img src="/pics/calculator.png" class="calculator-img d-inline-block align-top " alt="gpa.jpg">
        </a>
    </nav>
    <% if(message3.length > 0){ %>
    <div id="yeah" class="alertcsssign2 alert alert-success">
        <%= message3 %>
    </div>
    <% }%>
    <% if(message1.length > 0){ %>
    <div class="alert alert alert-danger alert-dismissible fade show alert-css1" role="alert">
        <div class="text-beware">
            <%= message1 %>
        </div>
        <button type="button" class="close close-button" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% }%>
    <% if(message.length > 0){ %>
    <div class="alert alert alert-success alert-dismissible fade show alert-css1" role="alert">
        <div class="text-beware">
            <%= message %>
        </div>
        <button type="button" class="close close-button" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% }%>
    <div class="text-center">
        <form action="/signin" method="POST" class="form-signin">
            <img class="mb-4" src="/pics/clown.png" alt="clownlogo" style="width: 4rem;">
            <h1 class="h3 mb-3 font-weight-normal">SIGN IN</h1>
            <input type="email" name="username" class="signin-email form-control" placeholder="Email address" required autofocus>
            <input type="password" name="password" class="signin-password mainpassword form-control" placeholder="Password" required autofocus>
            <div class="rules3">
                <a class="rules3" href="/forgotpassword">
                    Forgot Password?
                </a>
                <a class="rules4" href="/changepassword">
                    Change Password?
                </a>
            </div>
            <button class="btn btn-lg btn-primary btn-block signin-button" type="submit">Sign in</button>
            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
                <i class="fab fa-google"></i>
                Sign In with Google
            </a>
            <p class="rules">New to checkGPA? <a href="/signup">Create an account.</a></p>
            <p class="rules">By clicking “Sign in for checkGPA”, you agree to our <a href="/terms&conditions" target="_blank"> Terms of Service</a> and <a href="/privacy-policy" target="_blank">Privacy Statement</a>. </p>
            <p class="p-copyright mt-5 mb-3 text-muted">&copy;checkGPA <%= recentyear %></p>
            <div class="checkbox mb-3">
                <input type="checkbox" class="remember-css" name="rememberme"> Remember me
            </div>
        </form>
    </div>
    <%- include('partials/footerform'); -%>
