<%- include('partials/header'); -%>
<% if(message.length > 0){ %>
<div id="yeah" class="alert-css alert alert-success">
    <%= message %>
</div>
<% }%>

<div class="table-gradesystem">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">GRADE</th>
                <th scope="col">POINTS</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% allgradeitems.forEach(function(allgradeitem){ %>
            <tr>
                <td><%= allgradeitem.grade1 %></td>
                <td><%= allgradeitem.points %></td>
                <form action="/deleteitem1" method="post">
                    <td><button type="submit" name="deleteitemgrade" value="<%= allgradeitem._id %>" onchange="this.form.submit()" class="button-ions"><i class=" icon-css fas fa-1x fa-trash"></i></button></td>
                </form>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<div class="home-container1">
    <a href="/grade-system"><img src="pics/homepics/resultgrade.png" class="img-systems" alt="grade.png"></a>
    <h5>Enter your Grade & Points</h5>
    <form action="/grade-system" method="POST">
        <div class="form-group">
            <input type="text" name="grade1" autocomplete="off" class="form-gradesystem form-control" placeholder="Enter Grade e.g. A">
            <small class="form-text text-muted"></small>
        </div>
        <div class="form-group">
            <input type="text" name="point" autocomplete="off" class="form-gradesystem form-control" placeholder="Enter Point e.g. 5">
            <small class="form-text text-muted"></small>
        </div>
        <!--
        <div class="form-group">
            <input type="text" class="form-gradesystem form-control" placeholder="Enter total units">
            <small class="form-text text-muted"></small>
        </div>
-->
        <button type="submit" class="form-gradesystem btn btn-dark">Add</button>
    </form>
</div>
